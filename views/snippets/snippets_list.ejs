<%- include('../partials/header.ejs') %>

    <% for(let i = 0; i < snippets.length; i++) {%>
        <div class="card">
            <h3>
                <i class="<%= snippets[i].Language.logo %> colored"></i>
                <%= snippets[i].title %>
            </h3>
            <pre>
                <code class="<%= snippets[i].Language.htmlClass %>">
                    <%= snippets[i].code %>
                </code>
            </pre>
            <p><%= snippets[i].description %></p>
            <p><%= snippets[i].creationDate %></p>
        </div>
    <% } %>
    <script src="/js/prism.js"></script>

<%- include('../partials/footer.ejs') %>